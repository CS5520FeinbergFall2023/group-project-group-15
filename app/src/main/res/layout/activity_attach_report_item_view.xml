<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="10dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/time_tv_attach_report"
        android:text="time is here"
        android:layout_margin="8dp"
        android:textStyle="bold"
        android:textSize="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/type_tv_attach_report"
        android:text="Type is here"
        android:layout_margin="8dp"
        android:textStyle="bold"
        android:textSize="16dp"
        app:layout_constraintTop_toBottomOf="@+id/time_tv_attach_report"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/address_tv_attach_report"
        android:text="Address is here"
        app:layout_constraintTop_toBottomOf="@+id/type_tv_attach_report"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="8dp"
        android:textStyle="bold"
        android:textSize="16dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>